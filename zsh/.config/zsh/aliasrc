#!/bin/zsh

# utilities
alias grep="grep --color"
alias diff="diff --color"
alias ip="ip -color"
alias cp="cp -v"
alias mv="mv -v"
alias ls="ls -NFh --color=auto --group-directories-first"
alias ht="htop"
alias src="print ''; exec zsh"
alias svi="sudoedit"
alias sudo="sudo -v; sudo "
alias xclip="xclip -selection clipboard"
alias wget="wget -c"
alias qmv="qmv -fdo -a"
alias newsboat="newsboat -q"
alias -g NF="*(.oc[1])"
alias -g LD="~/Downloads/*(.oc[1])"
alias -g LS="~/Pictures/screenshots/*(.oc[1])"
alias -g N="/dev/null"
alias yay="yay --removemake"
alias apply="patch --merge -p1 -i"
alias xcopy="xclip -sel clip -r"

# git
alias gst="git status"
alias gaa="git add ."
alias ga="git add"
alias gai="git add --interactive"
alias glg="git log --stat"
alias gco="git checkout"
alias gcp="git cherry-pick"
alias gcpc="git cherry-pick --continue"
alias gcpa="git cherry-pick --abort"
alias grv="git revert"
alias grvc="git revert --continue"
alias grvb="git revert --abort"
alias grbi="git rebase --interactive"
alias grbc="git rebase --continue"
alias grba="git rebase --abort"
alias gca="git commit --amend"
alias gcm="git commit --message"
alias grh="git reset"
alias grhh="git reset --hard"
alias gcl="git clone"
alias gup="git add . && git commit --edit && git push --set-upstream origin"
alias gb="git branch --all"
alias gd="git diff"
alias gds="git diff --stat"
alias gdc="git diff --cached"
