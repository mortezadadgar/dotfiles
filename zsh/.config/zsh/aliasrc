# utilities
alias grep="grep --color"
alias diff="diff --color"
alias ip="ip -color"
alias cp="cp -v"
alias mv="mv -v"
alias mkdir="mkdir -p"
alias ls="ls -NFh --color --group-directories-first"
alias ht="htop"
alias vi="nvim"
alias src="exec zsh"
alias svi="sudoedit"
alias sudo="sudo -v; sudo "
alias xclip="xclip -selection clipboard"
alias eshowkw="eshowkw -a amd64"
alias wget="wget -c --content-disposition"
alias grep="grep --color"
alias gr="grep -rn --color --binary-files=without-match"
alias qmv="qmv -fdo -a"
alias newsboat="newsboat -q"
alias -g NF="*(.oc[1])"
alias -g LD="~/Downloads/*(.oc[1])"
alias -g LB="~/Books/*(.oc[1])"
alias -g LS="~/Pictures/screenshots/*(.oc[1])"
alias yay="yay --askyesremovemake"

# syslog
alias log="less +G /var/log/syslog"
alias logtail="tail -fn 5 /var/log/syslog"

# git
alias gst="git status"
alias gaa="git add ."
alias gau="git add ."
alias glg="git log --shortstat"
alias gco="git checkout"
alias gcp="git cherry-pick"
alias grbi="git rebase --interactive"
alias grbc="git rebase --continue"
alias grba="git rebase --abort"
alias gca="git commit --amend"
alias grhh="git reset --hard"
alias grh="git reset"
alias gcm="git commit -m"
