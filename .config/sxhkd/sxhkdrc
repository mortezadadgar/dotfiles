#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + d
 	 dmenu_run -bw 2 -c -l 10

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; \
	notify-send -i gnome-settings 'sxhkd' 'Reloaded config!'

# sound control
XF86Audio{RaiseVolume,LowerVolume,Mute}
 	pulsemixer {--change-volume +10, --change-volume -10, --toggle-mute}

# media keys
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

# brightness keys
XF86MonBrightness{Up,Down}
	xbacklight {-inc 5,-dec 5}

# screenshot
super + Print
	dmenumaim

# powermenu
super + ctrl + p
	dmenupower

# iwd
super + n
	dmenuiwd

# pass
super + p
	dmenupass

#
# bspwm hotkeys
#

# quit/restart bspwm
super + ctrl + r
	bspc wm -r; \
	notify-send -i gnome-settings 'bspwm' 'Reloaded config!'

# quit bspwm
super + ctrl + q
	[ "$(printf "No\nYes" | dmenu -h 32 -p "Quit out of bspwm?")" = "Yes" ] && \
	bspc quit

# close/kill an instance
super + {shift + ,_}q
	bspc node -{c,k}

#
# state/flags
#

# set the window state
super + {s,f}
	bspc node -t {\~floating,\~fullscreen}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# Make a window sticky/non-sticky
super + t
	bspc node -g sticky={on,off}

# hide/unhide a window
super + slash
	bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden={on,off}

#
# focus/swap
#

# focus or move the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send and focus to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}' --follow

# Rotate view
super + shift + {bracketright,bracketleft}
	{bspc node @/ -R 90,bspc node @/ -R -90}

# focus the last node/desktop
super + Tab
	bspc desktop -f last

# swap the current node and the biggest window
super + space
	bspc node -s biggest.local

# resize windows to the right/left
super + Right
	bspc node -z right 50 0 || bspc node -z left 50 0
super + Left
	bspc node -z left -50 0 || bspc node -z right -50 0

#
# apps
#

# Firefox
super + shift + {f, g}
	 {firefox,firefox --private-window}

# Telegram
super + shift + e
	 telegram-desktop

# Ncmpcpp
super + shift + m
	alacritty \
	--class ncmpcpp,Alacritty \
	-o window.padding.x=5 \
	-o window.padding.y=5 \
	-o window.dimensions.columns=85 \
	-o window.dimensions.lines=18 \
	-e ncmpcpp -q

# Calculator
super + shift + equal
	dmenucalc
