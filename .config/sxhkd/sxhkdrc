#
# wm independent hotkeys
#
# terminal emulator

super + Return
	alacritty

# program launcher
super + d
	rofi -display-drun "> " -show drun -modi drun \
	-theme /home/morteza/.config/rofi/simple_launcher.rasi

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# powermenu
super + shift + n
	rofi -modi 'Powermenu: /home/morteza/.config/rofi/scripts/rofi-powermenu.sh' \
	-show Powermenu -theme /home/morteza/.config/rofi/powermenu.rasi
#
# bspwm hotkeys
#

# quit/restart bspwm
super + ctrl + {q,r}
	bspc {quit,wm -r}

# always close only ONE instance
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#
# state/flags
#

# set the window state
# toggle fullscreen with only one key
super + {t,s,f}
	bspc node -t {tiled,floating,\~fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus desktop {1-9,0} (or bounce to last desktop)
super + {1-9,0}
	target='^{1-9,10}'; \
	[ "$(bspc query -D -d "$target")" \
	!= "$(bspc query -D -d)" ] \
	&& bspc desktop -f "$target" \
	|| bspc desktop -f last.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + {y,u,i,o}
	$HOME/.config/sxhkd/scripts/bspwm_resize.sh {west,south,north,east}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Make a window sticky/non-sticky
super + o
	bspc node -g sticky={on,off}

# apps
super + shift + {f, End, e, p}
	{firefox, firefox --private-window, telegram-desktop, persepolis}

# ncmpcpp
super + shift + m
	alacritty \
	--dimensions 60 15 \
	--class ncmpcpp,Alacritty -e ncmpcpp

# calc
super + shift + equal
	alacritty \
	--class bc,Alacritty --dimensions 25 20 \
	-e bash -c 'figlet "+=/-" \
	| boxes -d stone \
	&& BC_ENV_ARGS=<(echo "scale=2") \bc -q'

# sound control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	pulsemixer {--change-volume +10, --change-volume -10, --toggle-mute}

# media keys
XF86Audio{Next,Prev,Play,Stop}
	playerctl {next,previous,play-pause,pause}

XF86MonBrightness{Up,Down}
	xbacklight {-inc 5, -dec 5}

# screenshot (region)
Print
	flameshot gui

# screenshot (full)
super + Print
	flameshot full -c

# pulsemixer
super + shift + v
	alacritty \
	--dimensions 50 15 \
	--class pulsemixer,Alacritty -e pulsemixer
