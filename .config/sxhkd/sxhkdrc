#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + d
	rofi -show drun -columns 3

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + ctrl + {q,r}
	bspc {quit,wm -r}

# always close only ONE instance
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#
# state/flags
#

# set the window state
# toggle fullscreen with only one key
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,\~fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus desktop {1-9,0} (or bounce to last desktop)
super + {1-9,0}
	target='^{1-9,10}'; \
	[ "$(bspc query -D -d "$target")" \
	!= "$(bspc query -D -d)" ] \
	&& bspc desktop -f "$target" \
	|| bspc desktop -f last.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

#
# move/resize
#

# expand a window by moving one of its side outward
super + {y,u,i,o}
	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Make a window sticky/non-sticky
super + o
	bspc node -g sticky={on,off}

# apps
super + shift + {f, e}
	{firefox, telegram-desktop}

# ncmpcpp
super + shift + m
	bspc rule -a Alacritty:ncmpcpp -o desktop=^4 \
	state=floating follow=on && alacritty \
	--dimensions 70 20 --position 10 40 \
	--class ncmpcpp,Alacritty -e ncmpcpp

# calc
super + shift + equal
	bspc rule -a Alacritty:bc state=floating \
	&& alacritty --class bc,Alacritty --dimensions 25 20 \
	-e bash -c 'figlet "+=/-" \
	| boxes -d stone && bc -q'

# ranger
super + shift + r
	alacritty -e ranger

# sound control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	$HOME/.config/sxhkd/scripts/VolumeControl.sh {up, down, mute}

# media keys
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

XF86MonBrightness{Up,Down}
	$HOME/.config/sxhkd/scripts/BrightnessControl.sh {up, down}

# screenshot
Print
	flameshot gui
super + Print
	flameshot full -c

# toggle dont-disturb-mode
F10 + {_,shift +}
	{dunstify -r 9292 -u critical "Enabled Do not disturb mode" && sleep 2 && killall -SIGUSR1 dunst && dunstify -C 9292,killall -SIGUSR2 dunst && dunstify -r 9293 -u critical "Disabled Do not disturb mode"}
