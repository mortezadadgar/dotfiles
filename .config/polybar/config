[colors]
background = #282c34
foreground = #dfdfdf
foreground-alt = #616161
yellow = #ffff00
blue = #61AFEF
grey = #333842
red_dark = #9d000f
red = #ff3333
black = #000000
blue_dark = #062135

[bar/top]
width = 100%
height = 29
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

border-size = 0
border-color = #0000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 1

font-0 = "Iosevka Nerd Font:style=Regular:size=12;3"
font-1 = "Iosevka Nerd Font:style=Heavy Italic:size=12;3"

modules-left = bspwm title
modules-center = mpd
modules-right = memory cpu temperature pulseaudio backlight battery date

tray-position = right
tray-padding = 2
enable-ipc = false

cursor-click = pointer
cursor-scroll = ns-resize

wm-restack = bspwm

[module/backlight]
type = internal/xbacklight
enable-scroll = false

format = <label>
format-prefix = %{T2}BRT%{T-}
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage%%
label-padding = 1

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format = <label-layout>
format-spacing = 0

format-prefix = %{T2}LAY%{T-}
format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

[module/temperature]
type = internal/temperature
interval = 8
thermal-zone = 0
warn-temperature = 60

format = <label>
format-prefix = %{T2}TEMP%{T-}
format-prefix-foreground = ${colors.foreground-alt}

format-warn = <label-warn>
format-warn-prefix = %{T2}TEMP%{T-}
format-warn-prefix-foreground = ${colors.red}

label = %temperature-c%
label-warn = %temperature-c%
label-padding = 1
label-warn-padding = 1

[module/cpu]
type = internal/cpu
interval = 2

format = <label>
format-prefix = %{T2}CPU%{T-}
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage%%
label-padding = 1

[module/bspwm]
type = internal/bspwm
enable-scroll = false

format = <label-state>

label-focused-background = ${colors.blue_dark}
label-occupied-background = ${colors.background}
label-empty-background = ${colors.background}
label-empty-foreground = ${colors.background}

label-focused = [%{T2}%name%%{T-}]
label-focused-padding = 1
label-occupied = %{T2}%name%%{T-}
label-occupied-padding = 1
label-empty =
label-empty-padding = 1
label-urgent = %{T2}%name%%{T-}
label-urgent-padding = 1

[module/title]
type = internal/xwindow

format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}

label = %title%
label-maxlen = 20

label-empty = Empty
label-empty-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
