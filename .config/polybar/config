[module/spotify]
type = custom/script
interval = 10
format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-padding = 2
format = <label>
exec = python $HOME/.config/polybar/scripts/spotify_status.py -f '{artist}: {song}' --font=1 -t 40 -q

[module/mpd]
type = internal/mpd
