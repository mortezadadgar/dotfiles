[module/spotify]
type = custom/script
interval = 10
format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-padding = 2
format = <label>
exec = python $HOME/.config/polybar/scripts/spotify_status.py -f '{artist}: {song}' --font=1 -t 40 -q

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
interval = 10

format-online = <label-song>
format-playing = ${self.format-online}
format-paused =
format-stopped =
format-online-prefix = 
format-online-prefix-foreground = ${colors.foreground-alt}
format-online-prefix-padding = 2

label-song = %title%
