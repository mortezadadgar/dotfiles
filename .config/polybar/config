port = 6600
interval = 10

format-online = <label-song>
format-playing = ${self.format-online}
format-paused =
format-stopped =
format-online-prefix = 
format-online-prefix-padding = 2

label-song = %title%

[module/netstat]
type = custom/script
interval = 90
format-prefix = ﯲ
label-padding = 1
label-padding-left = 2
exec = bash -c vnstat |awk '/today/ {print $2,$3}' |tail -1
