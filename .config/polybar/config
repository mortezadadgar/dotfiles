grey = #333842
red_dark = #9d000f
red = #ff3333
black = #000000
blue_dark = #062135

# NOTE: use label-padding instead of format-prefix-padding
[bar/top]
width = 100%
height = 29
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 1

font-0 = "Iosevka Nerd Font:style=Regular:size=12;3"
font-1 = "Iosevka Nerd Font:style=Heavy Italic:size=12;3"

modules-left = bspwm title
modules-center = mpd
modules-right = netstat cpu temperature pulseaudio backlight battery date

tray-position = right
tray-padding = 2
enable-ipc = false

cursor-click = pointer
cursor-scroll = ns-resize

wm-restack = bspwm

[module/backlight]
type = internal/xbacklight
enable-scroll = false

format = <ramp> <label>
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = ﯦ
ramp-4 = ﯦ
ramp-5 = ﯦ
