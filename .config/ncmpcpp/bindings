# common #
def_key "u"
  update_database
def_key "b"
  show_browser
def_key "y"
  show_playlist
def_key "v"
  show_visualizer
def_key "x"
  delete_playlist_items
def_key "x"
  delete_stored_playlist
def_key "x"
  delete_browser_items
def_key "t"
  show_tag_editor
def_key "+"
    show_clock
def_key "="
    volume_up
def_key "."
    show_lyrics
def_key "?"
    show_help
# vim-like movements #
def_key "j"
    scroll_down
def_key "k"
    scroll_up
def_key "h"
    previous_column
def_key "l"
    next_column
def_key "L"
  seek_forward
def_key "H"
  seek_backward
def_key "n"
    next_found_item
def_key "N"
    previous_found_item
def_key "J"
    move_sort_order_down
def_key "K"
    move_sort_order_up
def_key "h"
  jump_to_parent_directory
def_key "l"
  enter_directory
def_key "l"
  run_action
def_key "l"
  play_item
def_key "G"
  move_end
def_key "g"
  move_home
# nnn-like selection #
def_key "space"
  select_item
  scroll_down

