#!/bin/bash
# Description: check gentoo system for vulnerabilities
# Dependencies: glsa-check
# Shell: Bash

if ! command -v glsa-check > /dev/null; then
	notify-send "Gentoo Security" "glsa-check is not installed"
	exit 1
fi

message="$(glsa-check -t affected 2>/dev/null)"
if [ -n "$message" ]; then
	notify-send -i security-medium "Gentoo Security" "This system is affected by: $message"
fi
