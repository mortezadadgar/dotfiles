#!/bin/bash
# Description: tofi script to take screenshots
# Dependencies: tofi, grim
# Shell: Bash
set -eu -o pipefail

# Variables
DIR="$HOME/Pictures/screenshots"
FORMAT="$DIR/$(date '+%y%m%d-%H%M-%S').png"

select=$(printf "selected area (copy)\nfull screen (copy)\nselected area\nfull screen" |
	tofi --prompt-text "Screenshot which area?")

case $select in
	"selected area")
		grim -g "$(slurp)" "$FORMAT"
		notify-send "grimshot" "Screenshot taken"
		;;
	"full screen")
		grim "$FORMAT"
		notify-send "grimshot" "Screenshot taken"
		;;
	"selected area (copy)")
		grim -g "$(slurp)" - | wl-copy -t image/png
		notify-send "grimshot" "Screenshot copied to clipboard"
		;;
	"full screen (copy)")
		grim - | wl-copy -t image/png
		notify-send "grimshot" "Screenshot copied to clibboard"
		;;
esac
