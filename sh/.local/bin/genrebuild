#!/bin/sh
# Description: rebuild all gentoo packages
# Shell: POSIX compliant
set -eu

exclude_pkg="
	dev-python/*
	app-alternatives/*
	sys-kernel/*
	sys-firmware/*
	x11-themes/*
	acct-user/*
	acct-group/*
	virtual/*
	*-bin
"

sudo emerge -e --update --newuse --quiet-build --exclude "${exclude_pkg}" @world "$@"
