#!/bin/bash
# Description: Open tmux scrollback URLs using dmenu
# Dependencies: dmenu, tmux
# Shell: Bash
# Note: tmux likes to print exit status code in dmenu cancellation 
# so set -e should not be used here.
set -u

regex="(http(s)?://|www\.)[^] \)<\"\']+"
urls=$(tmux capture-pane -J -p -S '-' | grep -oE "$regex" | sort -u)
[ -z "$urls" ] && exit
url=$(echo "$urls" | dmenu -i -l 10 -w "$WINDOWID")
[ -z "$url" ] && exit
${BROWSER:-firefox} "$url" &
