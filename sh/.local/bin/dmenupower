#!/bin/bash
# Description: A simple powermenu with dmenu
# Dependencies: dmenu, slock
# Shell: Bash
set -eu -o pipefail

select=$(printf " Poweroff\n Restart\n󰍃 Logoff\n Lockscreen\n󰤄 Sleep"| dmenu -i)

case $select in
	" Poweroff")
		systemctl poweroff -i
		;;
	" Restart")
		systemctl reboot -i
		;;
	"󰍃 Logoff")
		clear > /dev/tty1
		xdotool key super+shift+ctrl+q
		;;
	" Lockscreen")
		slock
		;;
	"󰤄 Sleep")
		systemctl suspend -i
		;;
esac
