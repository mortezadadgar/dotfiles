#!/bin/bash
# Description: A simple powermenu with dmenu
# Dependencies: dmenu, slock, elogind
# Shell: Bash
set -eu -o pipefail

select=$(printf " Poweroff\n Restart\n󰍃 Logoff\n Lockscreen\n󰤄 Sleep"| dmenu)

case $select in
	" Poweroff")
		systemctl poweroff -i
		;;
	" Restart")
		systemctl reboot -i
		;;
	"󰍃 Logoff")
		clear > /dev/tty1
		pkill -SIGTERM dwl$
		;;
	" Lockscreen")
		waylock
		;;
	"󰤄 Sleep")
		systemctl suspend -i
		;;
esac
