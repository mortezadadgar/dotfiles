# X settings
xset -dpms
xset s 300 10
xset r rate 300 50
xrdb -merge "$XDG_CONFIG_HOME/x11/Xresources"
setxkbmap -option caps:escape
setxkbmap -layout us,ir -option grp:alt_shift_toggle

if [ -d /etc/X11/xinit/xinitrc.d ]; then
	for f in /etc/X11/xinit/xinitrc.d/?*.sh; do
		[ -x "$f" ] && . "$f"
	done
fi

# WM
exec dwm
